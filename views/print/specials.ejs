            font-weight:900;
        }
        li{
            list-style-type:none;
            margin: <%= itemMargin %>px 0;
        }
        #format-options,
        #digits,
        #lower-flexbox{
            display:flex;
        }
        #format-options,#digits{
            align-items:center;
        }
        #format-options{
            column-gap:20px;
        }
        #lower-flexbox{
            width:4.25in;
            justify-content:space-between;
        }
        #toggle-div{
            display:inline-flex;
            justify-content:center;
        }
        #toggle-switch{
            cursor:pointer;
        }
        #tens,#ones{
            display:flex;
            flex-direction:column;
            align-items:center;
        }
        #digits{
            visibility:hidden;
        }
        #up-ten,
        #down-ten,
        #up-one,
        #down-one{
            cursor:pointer;
        }
        button{
            padding:0.5em 0.75em;
            cursor:pointer;
            border-radius:15px;
        }
        button:hover{
            background:grey;
            color:white;
        }
        *{
            padding:0;
            margin:0;
            box-sizing:border-box;
        }
        #wrapper{
            width:8.5in;
            height:11in;
            border:1px solid black;
            display:flex;
        }
        #top-left,
        #bottom-left,
        #top-right,
        #bottom-right{
            padding:<%= pagePadding %>px;
            width:4.25in;
            height:5.5in;
            border:1px solid red;
