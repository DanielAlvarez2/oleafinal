<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script
    src="https://kit.fontawesome.com/21ef82ed30.js"
    crossorigin="anonymous"></script>
    <link rel="stylesheet" href="main.css">
    <style>
        .pic-large{
            margin:0 auto;
            display: block;
            margin-top: 40px;
            margin-bottom: 20px;
            width:940px;
            height:626px;
            object-fit:cover;
        }
        .pic-small{
            width:120px;
            height:80px;
        }
        #slideshow{
            max-width:940px;
            margin-bottom: 20px;
            position: relative;
        }
        #small-slideshow{
            width:7781px;
            position:relative;
            right:3483px;
        }
        #small-slideshow-wrapper{
            width:940px;
            overflow:hidden;
            position:relative;
        }
        #shader-left,
        #shader-right{
            width:calc(50% - 60px);
            height:80px;
            position:absolute;
            top:0;
            z-index:100;
            background:#00000099;
        }
        #shader-left{
            left:0;
        }
        #shader-right{
            right:0;
        }
        #left,#right{
            position:absolute;
            background: transparent;
            color:white;
            font-size: 20px;
            font-weight: 100;
            top:0;
            bottom:0;
            display: flex;
            align-items: center;
        }
        #left{
            left:0;
            justify-content:flex-start;
        }
        #right{
            right:0;
        }
        #left-arrow,#right-arrow{
            background: #88888888;
            transform: scaleY(2);
            padding: 0 14px;
            line-height: 25px;
        }
        #left-arrow:hover,
        #right-arrow:hover{
            background: #44444444;
            cursor: default;
        }
    </style>

    <script>
        let pics = [
            '/slideshow/1.jpg',
            '/slideshow/2.jpg',
            '/slideshow/3.jpg',
            '/slideshow/4.jpg',
            '/slideshow/5.jpg',
            '/slideshow/6.jpg',
            '/slideshow/7.jpg',
            '/slideshow/8.jpg',
            '/slideshow/9.jpg',
            '/slideshow/10.jpg',
            '/slideshow/11.jpg',
            '/slideshow/12.jpg',
            '/slideshow/13.jpg',
            '/slideshow/14.jpg',
            '/slideshow/15.jpg',
            '/slideshow/16.jpg',
            '/slideshow/17.jpg',
            '/slideshow/18.jpg',
            '/slideshow/19.jpg',
            '/slideshow/20.jpg',
            '/slideshow/21.jpg',
            '/slideshow/22.jpg',
            '/slideshow/23.jpg',
            '/slideshow/24.jpg',
            '/slideshow/25.jpg',
            '/slideshow/26.jpg',
            '/slideshow/27.jpg',
            '/slideshow/28.jpg',
            '/slideshow/29.jpg',
            '/slideshow/30.jpg',
            '/slideshow/31.jpg',
        ]
        const picsLength = pics.length
        let picsShuffled = []
        for(let i=0;i<picsLength;i++){
            let currentPic = Math.floor(Math.random()*pics.length)
            picsShuffled.push(pics[currentPic])
            pics.splice(currentPic,1)
        }
        console.log(picsShuffled)
        console.log(pics)
    </script>
</head>
<body>
    <div id="wrapper">
    <%- include('./partials/header.ejs')%>
        <main>            
            <div id="slideshow">
                <div id="left"><div id="left-arrow">&lt;</div></div>
                <div id="right"><div id="right-arrow">&gt;</div></div>


                <script>
                    document.write(`
                        <img src="${picsShuffled[0]}" class="pic-large">
                    `)
                    for(let i=1;i<picsLength;i++){
                        document.write(`
                            <img src="${picsShuffled[i]}" class="pic-large">
                        `)
                    }
                    document.write(`
                        </div><!--#slideshow-->
                        <div id='small-slideshow-wrapper'>
                        <div id="small-slideshow">
                    `)
                
                    for(let i=0;i<picsLength;i++)
                    document.write(`
                        <img src="${picsShuffled[i]}" class="pic-small">
                    `)
                    for(let i=0;i<picsLength;i++)
                    document.write(`
                        <img src="${picsShuffled[i]}" class="pic-small">
                    `)

                </script>
            </div><!--#small-slideshow-->
            <div id='shader-left'></div><!--#shader-left-->
            <div id='shader-right'></div><!--#shader-right-->
            </div><!--#small-slideshow-wrapper-->

            <%- include('./partials/footer.ejs') %>
    
        </main>

    </div>
    <script src="main.js"></script>
</body>
</html>