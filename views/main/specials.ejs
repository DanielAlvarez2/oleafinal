<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script
    src="https://kit.fontawesome.com/21ef82ed30.js"
    crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/main.css">
    <style>
        #info-page-flexbox{
            display:flex;
            gap:75px;
        }
        #left{
            max-width:43ch;
        }
        h2{
            margin: 70px 0 20px;
        }
        #name-price{
            display:flex;
            justify-content:space-between;
            margin-top:30px;
        }
        @media(max-width:1000px){
            #info-page-flexbox{
                padding-left:5vw;
                padding-right:5vw;
            }
        }
        @media(max-width:700px){
            #info-page-flexbox{
                flex-direction:column;
            }
            #opentable{
                width:300px;
                margin:0 auto;
            }
        }
        @media(max-width:350px){
            #opentable{
                max-width:90vw;
            }
        }
    </style>
</head>
<body>
    <div id="wrapper">

    <%- include('./partials/header.ejs')%>

        <main>            
<div id='info-page-flexbox'>
    <div id="left">


        <span style='color:white;
                     font-family:futura medium;
                     font-weight:900;
                     font-size:18px;
                     letter-spacing:2px;'>
        DAILY SPECIALS
        </span>
        <br><br>

        <% if(appetizers.length > 0){ %>
        <div style='text-align:center;
                    font-size:25px;'>
        appetizers
        </div>
        <br>
            <ul>
                <% for(let i=0;i<appetizers.length;i++){ %>
                    <span id='name-price'>
                        <li class='bold-text'><%= appetizers[i].name %></li>
                        <li><%= appetizers[i].price %></li>
                    </span>
                    <li style='width:calc(100% - 5ch)'><%= appetizers[i].description %></li>
                <%}%>
            </ul>
        <% } %>


        <% if(entrees.length > 0){ %>
        <div style='text-align:center;
                    font-size:25px;
                    margin-top:100px;'>
        entr√©es
        </div>
        <br>
            
            
            <ul>
                <% for(let i=0;i<entrees.length;i++){ %>
                    <span id='name-price'>
                        <li class='bold-text'><%= entrees[i].name %></li>
                        <li><%= entrees[i].price %></li>
                    </span>
                    <li style='width:calc(100% - 5ch)'><%= entrees[i].description %></li>
                <%}%>
            </ul>
        <% } %>



        <% if(desserts.length > 0){ %>
        <div style='text-align:center;
                    font-size:25px;
                    margin-top:100px;'>
        desserts
        </div>
        <br>
            <ul>
                <% for(let i=0;i<desserts.length;i++){ %>
                    <span id='name-price'>
                        <li class='bold-text'><%= desserts[i].name %></li>
                        <li><%= desserts[i].price %></li>
                    </span>
                    <li style='width:calc(100% - 5ch)'><%= desserts[i].description %></li>
                <%}%>
            </ul>
        <% } %>

    </div>

    <div id='right'>

        <div id='opentable'>
            make a reservation<br>
            <span>POWERED BY OPENTABLE</span>

            <a target='_blank' href='http://www.opentable.com/rest_profile.aspx?rid=151186&restref=151186'><div id='find-a-table'>
                FIND A TABLE
            </div></a>
        </div>
    </div>
</div>
            <%- include('./partials/footer.ejs') %>
        </main>

    </div>
    <script src="/main.js"></script>
</body>
</html>